<addons>
<addon id="plugin.program.nickwizard"
       name="Nick Wizard"
       version="1.0.0"
       provider-name="Nick">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py"/>
  <extension point="xbmc.addon.metadata">
    <summary>Installs Nick's Kodi build from Google Drive.</summary>
    <description>Downloads and installs Nick's preconfigured build, then restarts Kodi.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.nickrepo"
       name="Nick Repo"
       version="1.0.0"
       provider-name="Nick">
  <extension point="xbmc.addon.repository" name="Nick Repo">
    <info compressed="false">https://namenic.github.io/kodi-repo/addons.xml</info>
    <checksum>https://namenic.github.io/kodi-repo/addons.xml.md5</checksum>
    <datadir zip="true">https://namenic.github.io/kodi-repo/zips/</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Repo for Nick's Kodi Wizard</summary>
    <description>Installs and updates Nick Wizard.</description>
    <platform>all</platform>
  </extension>
</addon>

</addons>
